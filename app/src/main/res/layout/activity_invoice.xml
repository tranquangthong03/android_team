<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_foreground"
        app:tint="#4CAF50"/> <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Thanh toán thành công!"
    android:textSize="22sp"
    android:textStyle="bold"
    android:textColor="#4CAF50"
    android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/txtOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đơn: #12345"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày: 20/12/2025"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/txtMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phương thức: MoMo"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: $100"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Về trang chủ"
        android:layout_marginTop="40dp"/>

</LinearLayout>