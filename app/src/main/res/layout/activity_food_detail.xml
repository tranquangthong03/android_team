<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <!-- Thanh trên cùng -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_light"
            android:src="@drawable/ic_arrow_back__vector"
            app:tint="#333" />

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="BURGER"
            android:textStyle="bold"
            android:textColor="#222"
            android:gravity="center"
            app:layout_constraintHorizontal_weight="1"/>

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_dark"
            android:src="@drawable/ic_search"
            app:tint="#FFFFFF"/>

    </LinearLayout>

    <!-- Ảnh món ăn -->
    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_image_card"/>

    <!-- Nội dung -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgFood"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Burger Bistro"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222"/>

        <TextView
            android:id="@+id/txtRestaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rose Garden"
            android:textColor="#888"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="$40"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF8A00"/>

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Juicy beef burger with cheese, tomato and special sauce."
            android:textColor="#555"/>

        <!-- chọn số lượng -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="#444"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_qty_box"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btnMinus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_minus"
                    app:tint="#333"/>

                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <ImageButton
                    android:id="@+id/btnPlus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_plus"
                    app:tint="#333"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Thanh dưới cùng -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_bottom_bar"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total: $40"
            android:textColor="#222"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="ADD TO CART"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:backgroundTint="#FF8A00"
            android:textColor="#FFF"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
