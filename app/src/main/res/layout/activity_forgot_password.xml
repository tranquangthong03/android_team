<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282C35">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header_container_forgot"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back_forgot"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            android:tint="@android:color/white"
            android:contentDescription="Quay lại"/>

        <TextView
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập email để đặt lại mật khẩu"
            android:textColor="#C0C0C0"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- CARD CONTENT -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_container_forgot"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="32dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textColor="#808080"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/et_email_forgot"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="ví dụ: email@gmail.com"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_background"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/btn_send_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GỬI EMAIL ĐẶT LẠI MẬT KHẨU"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="16dp"
                android:backgroundTint="#FF6600"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
