<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#1C1D2B">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgFoodCart"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_card"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/txtNameCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgFoodCart"
            android:layout_marginStart="12dp"
            android:text="Pizza Calzone Châu Âu"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtPriceCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNameCart"
            android:layout_toRightOf="@id/imgFoodCart"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="64.000đ"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_circle_red"
            android:src="@drawable/ic_close"
            android:contentDescription="@null"
            app:tint="#FFFFFF"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <!-- qty box -->
        <LinearLayout
            android:id="@+id/layoutQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:background="@drawable/bg_qty_box"
            android:padding="4dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnMinusCart"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_minus"
                android:contentDescription="@null"
                app:tint="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/txtQtyCart"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnPlusCart"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_plus"
                android:contentDescription="@null"
                app:tint="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
